{
  "name": "near-social-bridge",
  "version": "1.0.0-alpha.6",
  "description": "Near Social Bridge Lib. This allows you to create React app and connect it to the Near Social View as well as sending and getting data from it.",
  "main": "./dist/cjs/src/index.js",
  "module": "./dist/esm/src/index.js",
  "types": "./dist/esm/src/index.d.ts",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean; npm run build:esm; npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir dist/cjs",
    "prepack": "npm build",
    "lint": "eslint \"{**/*,*}.{js,ts,jsx,tsx}\"",
    "prettier": "prettier --write \"{src,tests,example/src}/**/*.{js,ts,jsx,tsx}\""
  },
  "keywords": [],
  "author": "Wenderson Pires (Wpdas)",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=16"
  },
  "files": [
    "dist",
    "bridge.min.js",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/react": "^18.0.12",
    "@typescript-eslint/eslint-plugin": "^5.55.0",
    "@typescript-eslint/parser": "^5.55.0",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "install": "^0.13.0",
    "prettier": "^2.8.4",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "tslib": "2.4.0",
    "typescript": "^4.7.3"
  }
}
